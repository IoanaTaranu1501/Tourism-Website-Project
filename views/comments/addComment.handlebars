<form id="addComment-form" method="post">
    <div class="form-group">
        <label for="input-comment">description</label>
        <input type="text" id="input-comment" name="comment" placeholder="comment" value="{{description}}">
    </div>

    <div class="form-group">
        <label for="input-attractionId">attractionId</label>
        <input type="attraction" id="input-attraction" name="attraction" value="{{attractionId}}">
    </div>

    <div class="form-group">
        {{#if error}}
        <p class="error">can't add this comment, please try again</p>
        {{/if}}
        {{#if success}}
        <p class="success">add comment successfully!</p>
        {{/if}}
    </div>

    <div class="form-group">
        <button type="submit" class="submit-btn" id="submit" formaction="/comments/private/comments">submit Comment</button>
    </div>
</form>