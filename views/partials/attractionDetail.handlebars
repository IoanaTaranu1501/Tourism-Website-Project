<h1 class="profileTitle">{{Attractions.description.Name}}</h1>
<div id="attractionDetailTable">
    <h2>Attraction Information:</h2>
    <ul>
            <li id="detail-attration-rating">Rating : {{Attractions.description.Rating}}</li> 
            <li><img src= "{{Attractions.description.Img}}" width="80%"height="50%"/></li>
            <li>Price: ${{Attractions.description.Price}} /per</li>
            <li>Category: {{Attractions.description.Category}}</li>
            <li>Address: {{Attractions.description.Address}}</li>
            <li>Description: {{Attractions.description.Content}}</li>
    </ul>
</div>

{{#if isAdmin}}
<p>You can delete this attraction</p>
    <a id='admin-delete-atrraction' href="/delete/attractions/{{Attractions._id}}">Delete</a>
{{/if}}

<div id="show-comments">
    <h2>Comments:</h2>
        <dl id="commentsList">
        </dl>

</div>
<div id="comments-editor" class="search-card-center">
    <form id="add-comment-form" method="POST">


        <label for="input-comment-attraction-rating">Rating for this attraction: </label><br>
        <input type="number" id="input-comment-attraction-rating" placeholder="from 0 to 5(need integer)" name="attractionRating" min="0" max="5"><br>
        <label for="new-comment-input">Leave your new comment:</label><br>
        <textarea id="new-comment-input" name="newComment" placeholder="before you submit your comment,log in first!"></textarea>
        <button type="submit" class="submit-btn" id="new-comment-submit">Submit</button>
    </form>
</div>

    <div type="hidden">
        <input id="attractionId-add-travelogue" name="attractionIdDetailPage"type="hidden" value={{Attractions._id}} />
    </div>

<script type="text/javascript">
    localStorage.setItem('attractionIdForAddTravelogue', document.getElementById("attractionId-add-travelogue").value);
    localStorage.setItem('pageDeriveFrom', "add");
    localStorage.setItem('attractionIdToAdd', document.getElementById("attractionId-add-travelogue").value);
</script>
