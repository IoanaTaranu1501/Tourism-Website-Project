<form id="login-form" method="POST">
    <div class="form-group">
        <label for="input-useremail">User Eamil</label>
        <input type="email" id="input-usereamil" name="useremail" placeholder="usereamil" value="{{input-usereamil}}">
    </div>

    <div class="form-group">
        <label for="input-password">password</label>
        <input type="password" id="input-password" name="password" value="{{input-password}}">
    </div>
    <div class="form-group hidden" id="error-container" hidden>
        <div class="alert alert-danger text-goes-here">
        </div>
    </div>
    <div class="form-group">
      {{#if hasErrors}}
      <p class="error">{{error}}</p>
      {{/if}}
    </div>
    <div class="form-group">
        <button type="submit" class="submit-btn" id="logIn" formaction="/users/login">log in</button>
        <button type="submit" class="submit-btn" id="signIn" formaction="/users/signin">sign in</button>
    </div>
</form>
